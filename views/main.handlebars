{{#if currentUser}}
    <div class="pin_container">

        <div class="picture_container">
            <img src='{{pin.imgUrl}}' width="{{pin.imgWidth}}" height="{{pin.imgHeight}}"alt="picture">
        </div>

        <div class="info_container">
            <div class="stats_container">
                <h3>{{pin.title}}</h3>
                <h3>{{pin.hexCode}}</h3>
                <h3>{{pin.pinterestUrl}}</h3>
            </div>
            <div class="labels_container">
                {{#each pin.labels}}
                <h3 class="pin_labels">{{this}}</h3>
                {{/each}}
            </div>
        </div>

    </div>

{{/if}}
