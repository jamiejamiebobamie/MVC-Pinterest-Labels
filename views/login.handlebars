


<div class="login_signup_container">
    <form action="/login" method="post">
      <legend><h3 class="report_words">Login</h3></legend>

      <div class="form-group">
        <label for="user-username"><h3 class="report_words">Username</h3></label>
        <input type="text" name="username" class="form-control" id="user-username" placeholder="Bob Smith">
      </div>

      <div class="form-group">
        <label for="user-password"><h3 class="report_words">Password</h3></label>
        <input type="text" name="password" class="form-control" id="user-password" placeholder="password">
      </div>

      <div class='text-right'>
        <button type="submit" class="submit" class="btn btn-primary"><h3 class="report_words">Submit</h3></button>
      </div>

    </form>
</div>
